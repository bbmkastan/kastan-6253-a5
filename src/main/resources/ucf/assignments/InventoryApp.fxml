<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #000000;"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ucf.assignments.InventoryAppController">
    <TableView fx:id="tableListView" editable="true" layoutY="60.0" prefHeight="340.0" prefWidth="600.0"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="60.0">
      <columns>
          <TableColumn fx:id="colName" prefWidth="-1.0" text="Item Name"/>
          <TableColumn fx:id="colSerialNum" prefWidth="-1.0" text="Serial Number"/>
          <TableColumn fx:id="colPrice" prefWidth="200.0" text="Price"/>
      </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <JFXButton buttonType="RAISED" onAction="#addButtonClicked" ripplerFill="WHITE"
               style="-fx-background-color: #BB86FC; -fx-background-radius: 1000;" text="+"
               AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="20.0">
        <font>
          <Font name="System Bold" size="24.0"/>
        </font>
    </JFXButton>
    <AnchorPane layoutY="-7.0" prefHeight="60.0" prefWidth="600.0" style="-fx-background-color: #6200EE;"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <MenuButton layoutX="14.0" layoutY="18.0" mnemonicParsing="false" style="-fx-background-color: #6200EE;"
                    text="File" textFill="WHITE" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="16.0">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#saveAsButtonClicked" text="Save As..."/>
                <MenuItem mnemonicParsing="false" onAction="#LoadButtonClicked" text="Load..."/>
                <MenuItem mnemonicParsing="false" onAction="#helpButtonClicked" text="Help"/>
            </items>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </MenuButton>
        <TextField fx:id="searchBar" layoutX="294.0" layoutY="15.0" prefHeight="30.0" prefWidth="220.0"
                   promptText="Search..." AnchorPane.rightAnchor="82.0" AnchorPane.topAnchor="15.0"/>
        <JFXButton layoutX="523.0" layoutY="15.0" onAction="#deleteButtonClicked" ripplerFill="WHITE"
                   style="-fx-background-color: #6200EE; -fx-background-radius: 1000;" text="Delete"
                   textFill="WHITE" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="16.0">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </JFXButton>
    </AnchorPane>
</AnchorPane>
